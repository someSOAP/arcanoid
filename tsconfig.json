{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "ES6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "typeRoots" : ["node_modules/@types", "src/types"],
    "paths": {
      "@/utils/*": ["./utils/*"],
      "@/types/*": ["./types/*"],
      "@/classes/*": ["./classes/*"],
      "@/components/*": ["./components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}